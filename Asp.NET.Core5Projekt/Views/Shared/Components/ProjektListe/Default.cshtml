@using NSchicht.Core.Konkret
@model List<Aktenmappe>
<div class="row ">
              <div class="col-12 grid-margin">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Aktenmappeliste</h4>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Bild</th>
                            <th> Projekt Name </th>
                            <th> Projekt Url </th>
                            <th> Preis </th>
                            <th> Proportion </th>
                            <th> Status </th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                            <td>@item.PortfolioID</td>
                            <td><img src="@item.BildUrl"/></td>
                            <td>@item.Name</td>
                            <td>@item.ProjektUrl</td>
                            <td>@item.Preis</td>
                            <td>@item.Proportion%</td>
                            <td>
                                <a href="/Aktenmappe/BearbeitenAktenmappe/@item.PortfolioID/">
                              <div class="badge badge-outline-success">Details</div>
                              </a>
                            </td>
                          </tr>
                          }
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>