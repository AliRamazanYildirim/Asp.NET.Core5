@using NSchicht.Core.Konkret
@model List<Nachricht>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NeuerAdministratorLayout.cshtml";
}

    <div class="row">

              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Eingehende Nachrichten</h4>
                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th> Absender </th>
                            <th> Mail </th>
                            <th> Datum </th>
                            <th> Löschen </th>
                            <th> Details </th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                           {
                          <tr>
                            <td> @item.Name </td>
                            <td> @item.Mail </td>
                            <td> @(((DateTime)item.Datum).ToString("D")) </td>
                            
                            <td><a href="/AdminKontakt/LöschenKontakt/@item.NachrichtID" class ="btn btn-outline-danger">Löschen</a></td>
                            <td><a href="/AdminKontakt/KontaktDetails/@item.NachrichtID" class ="btn btn-outline-success">Details</a></td>
                          </tr>                            
                           }
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>