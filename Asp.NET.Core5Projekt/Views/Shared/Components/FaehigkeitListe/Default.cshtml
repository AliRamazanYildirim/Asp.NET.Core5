@using NSchicht.Core.Konkret
@model List<Faehigkeit>
<div class="section px-3 px-lg-4 pt-5" id="faehigkeiten">
  <div class="container-narrow">
    <div class="text-center mb-5">
      <h2 class="marker marker-center">Meine Fähigkeiten</h2>
    </div>
    <div class="text-center">
        <p class="mx-auto mb-3" style="max-width:600px">Ich lerne schnell und bin auf eine Vielzahl von Fähigkeiten spezialisiert, die für die Entwicklung von Webanwendungen und das Produktdesign erforderlich sind.</p>
    </div>
    <div class="bg-light p-3">
      <div class="row">
        <div class="col-md-12">
            @foreach (var item in Model)
           {
               <div class="py-1">
            <div class="d-flex text-small fw-bolder"><span class="me-auto">@item.Title</span><span>@item.Wert%</span></div>
            <div class="progress my-1">
              <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="100" data-aos-anchor=".skills-section" style="width: 90%" aria-valuenow="@item.Wert" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
           }
         
        </div>
      </div>
    </div>
  </div>
</div>