@using NSchicht.Core.Konkret
@model List<Nachricht>
<div class="col-md-6" data-aos="zoom-in" data-aos-delay="100">
        <div class="bg-light my-2 p-3 pt-2"><form action="/Ursprünglich/SendeNachrichten/" method="POST">
    <div class="form-group my-2">
      <label for="name" class="form-label fw-bolder">Name</label>
      <input class="form-control" type="text" id="name" name="Name" required>
    </div>
    <div class="form-group my-2">
      <label for="email" class="form-label fw-bolder">Email</label>
      <input class="form-control" type="email" id="email" name="Mail" required>
    </div>
  <div class="form-group my-2">
    <label for="message" class="form-label fw-bolder">Nachricht</label>
    <textarea class="form-control" style="resize: none;" id="nachricht" name="Inhalt" rows="4" required></textarea>
  </div>
  <button class="btn btn-primary mt-2" type="submit">Schicke</button>
  </form>
 </div>
</div>