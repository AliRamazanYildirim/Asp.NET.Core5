@using NSchicht.Core.Konkret
@model List<ToDoList>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_BenutzerLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Aufgabenliste</h4>

                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                           #
                          </th>
                          <th>
                            Inhalt
                          </th>
                          <th>
                            Progress
                          </th>
                          <th>
                            Status
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in Model)
                         {
                          
                            <tr>
                          <td>
                            @item.ID
                          </td>
                          <td>
                            @item.Inhalt
                          </td>
                          <td>
                            <div class="progress">
                              <div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="@item.Status" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                          </td>
                          <td>
                            @item.Status
                          </td>
                          <td><a href="/Benutzer/Benutzer/ToDoListEinzelheiten/@item.ID" class="btn btn-outline-primary">Einzelheiten</a></td>
                        </tr>                          
                         }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

