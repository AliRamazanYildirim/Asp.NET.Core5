@model NSchicht.Core.Konkret.AnwenderNachricht
@{
    ViewData["Title"] = "EmpfaengerNachrichtDetails";
    Layout = "~/Views/Shared/_BenutzerLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Absender Nachrichtendetails</h4>
                  @using(Html.BeginForm("Index","AnwenderNachricht", FormMethod.Post))
                  {
                     @Html.HiddenFor(x=>x.AnwenderNachrichtID)
                     <div class="form-group">
                      <label for="exampleInputName1">Empfänger</label>
                      <input type="text" asp-for="EmpfaengerName" class="form-control" id="exampleInputName1" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                      <label for="exampleInputName1">Empfänger Mail</label>
                      <input type="text" asp-for="Empfaenger" class="form-control" id="exampleInputName1" placeholder="Name">
                    </div>
                        <label for="exampleTextarea1">Nachricht</label>
                        <textarea class="form-control" asp-for="Inhalt" id="exampleTextarea1" rows="4"></textarea>
                      </div>
                    }
                </div>
              </div>
            </div>
