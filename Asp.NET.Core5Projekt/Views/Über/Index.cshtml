@model NSchicht.Core.Konkret.Über
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NeuerAdministratorLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Übersbearbeitungsseite</h4>
                  @using(Html.BeginForm("Index","Über", FormMethod.Post))
                  {
                      @Html.HiddenFor(x=>x.ÜberID)
                     <div class="form-group">
                      <label for="exampleInputName1">Header</label>
                      <input type="text" asp-for="Title" class="form-control" id="exampleInputName1" placeholder="Title">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">BildUrl</label>
                      <input type="text" asp-for="BildUrl" class="form-control" id="exampleInputName1" placeholder="BildUrl">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Adresse</label>
                      <input type="text" asp-for="Adresse" class="form-control" id="exampleInputName1" placeholder="Adresse">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Telefonnummer</label>
                      <input type="text" asp-for="TelefonNummer" class="form-control" id="exampleInputName1" placeholder="Telefonnummer">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Alter</label>
                      <input type="text" asp-for="Alter" class="form-control" id="exampleInputName1" placeholder="Alter">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">E-Mail</label>
                      <input type="text" asp-for="Mail" class="form-control" id="exampleInputName1" placeholder="Mail">
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Bezeichnung</label>
                        <textarea class="form-control" asp-for="Bezeichnung" id="exampleTextarea1" rows="4"></textarea>
                      </div>
                    <button type="submit" class="btn btn-outline-primary mr-2">Bearbeiten</button>
                    }
                </div>
              </div>
            </div>
