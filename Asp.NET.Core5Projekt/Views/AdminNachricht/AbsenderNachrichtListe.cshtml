@using NSchicht.Core.Konkret
@model List<AnwenderNachricht>
@{
    ViewData["Title"] = "AbsenderNachrichtListe";
    Layout = "~/Views/Shared/_NeuerAdministratorLayout.cshtml";
}

 <div class="row">

              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Anwender-Ausgehende Nachrichten</h4>
                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th> Empfänger </th>
                            <th> Gegenstand </th>
                            <th> Datum </th>
                            <th> Löschen </th>
                            <th> Details </th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                           {
                          <tr>
                            <td> @item.EmpfaengerName </td>
                            <td> @item.Gegenstand </td>
                            <td> @(((DateTime)item.Datum).ToString("D")) </td>
                            
                            <td><a href="/AdminNachricht/AdminNachrichtLöschen/@item.AnwenderNachrichtID" class ="btn btn-outline-danger">Löschen</a></td>
                            <td><a href="/AdminNachricht/AdminNachrichtDetails/@item.AnwenderNachrichtID" class ="btn btn-outline-success">Details</a></td>
                          </tr>                            
                           }
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
