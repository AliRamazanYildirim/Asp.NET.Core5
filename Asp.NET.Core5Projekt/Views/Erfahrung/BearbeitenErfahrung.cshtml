@model NSchicht.Core.Konkret.Erfahrung
@{
    ViewData["Title"] = "BearbeitenErfahrung";
    Layout = "~/Views/Shared/_NeuerAdministratorLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Seite zum Bearbeiten von Erfahrungen</h4>
                  <form class="pt-3" method="post" >
                      @Html.HiddenFor(x=>x.ErfahrungID)
                     <div class="form-group">
                      <label for="exampleInputName1">Name</label>
                      <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Datum</label>
                      <input type="text" asp-for="Datum" class="form-control" id="exampleInputName1" placeholder="Datum">
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Bezeichnung</label>
                        <textarea class="form-control" asp-for="Bezeichnung" id="exampleTextarea1" rows="4"></textarea>
                      </div>
                    <button type="submit" class="btn btn-outline-primary mr-2">Bearbeiten</button>
                    <button class="btn btn-light">Abbrechen</button>
                    </form>
                </div>
              </div>
            </div>