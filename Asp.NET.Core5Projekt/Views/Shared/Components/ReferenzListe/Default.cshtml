@using NSchicht.Core.Konkret
@model List<Referenz>
<div class="section px-3 px-lg-4 pt-5" id="referenzen">
  <div class="container-narrow">
    <div class="text-center mb-10">
        <h2 class="marker marker-center">Kundenbewertungen</h2>
    </div>
    <div class="row"> 
         @foreach (var item in Model)
         {
      <div class="col-md-10" data-aos="fade-right" data-aos-delay="100">
        <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@item.Kommentar</span></div>
        <div class="d-flex justify-content-end align-items-end">
          <div class="text-end me-2">
            <div class="fw-bolder">@item.ClientName</div>
            <div class="text-small">@item.Title / @item.Unternehmen</div>
          </div><img class="me-md-3 rounded" src="@item.BildUrl" width="96" height="96" alt="client 1"/>
        </div>
      </div>
      }
    </div>
  </div>
</div>