@using NSchicht.Core.Konkret
@model List<SozialerKontakt>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NeuerAdministratorLayout.cshtml";
}

<div class="row">

              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Soziale Medien</h4>
                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th> # </th>
                            <th> Title </th>
                            <th> Löschen </th>
                            <th> Bearbeiten </th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                           {
                          <tr>
                            <td> @item.SozialerKontaktID </td>
                            <td> @item.Name </td>
                            <td><a href="/SozialerKontakt/LöschenSozialerKontakt/@item.SozialerKontaktID" class ="btn btn-outline-danger">Löschen</a></td>
                            <td><a href="/SozialerKontakt/AktualisierenSozialerKontakt/@item.SozialerKontaktID" class ="btn btn-outline-success">Bearbeiten</a></td>
                          </tr>                            
                           }
                        </tbody>
                      </table>
                      <br/>
                       <a href="/SozialerKontakt/InsertSozialerKontakt/" class="btn btn-outline-primary"> Neuer Soziale Kontakt Hinzufügen</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>


