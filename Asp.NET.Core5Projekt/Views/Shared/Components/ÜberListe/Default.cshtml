@using NSchicht.Core.Konkret
@model List<Über>
<div class="section pt-4 px-3 px-lg-4" id="über">
  <div class="container-narrow">
       @foreach (var item in Model)
   {
       <div class="row">
      <div class="col-md-6">
        <h2 class="h4 my-2">@item.Title</h2>
        <p>@item.Bezeichnung</p>
        <div class="row mt-3">
          <div class="col-sm-3">
            <div class="pb-1">Alter:</div>
          </div>
          <div class="col-sm-8">
            <div class="pb-1 fw-bolder">@item.Alter</div>
          </div>
          <div class="col-sm-3">
            <div class="pb-1">Email:</div>
          </div>
          <div class="col-sm-8">
            <div class="pb-1 fw-bolder">@item.Mail</div>
          </div>
          <div class="col-sm-3">
            <div class="pb-1">Telefonnummer:</div>
          </div>
          <div class="col-sm-8">
            <div class="pb-1 fw-bolder">@item.TelefonNummer</div>
          </div>
          <div class="col-sm-3">
            <div class="pb-1">Adresse:</div>
          </div>
          <div class="col-sm-8">
            <div class="pb-1 fw-bolder">@item.Adresse</div>
          </div>
        </div>
      </div>
      <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100"><img class="avatar img-fluid mt-2" src="@item.BildUrl" width="350" height="350" alt="Ali Ramazan Yildirim"/></div>
    </div>
       
   }

  </div>
</div>