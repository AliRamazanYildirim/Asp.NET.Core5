@using NSchicht.Core.Konkret
@model List<Aktenmappe>
<div class="section px-2 px-lg-4 pt-5" id="aktenmappen">
  <div class="container">
    <div class="text-center mb-5">
      <h2 class="marker marker-center">Aktenmappen </h2>
    </div>
    <div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
      <div class="grid-sizer"></div>
      @foreach (var item in Model)
     {
      <div class="grid-item"><a href="https://dribbble.com">
          <figure class="portfolio-item"><img src="@item.BildUrl" data-bp="@item.ProjektUrlBild"/>
            <figcaption>
              <h4 class="h5 mb-0">@item.Name</h4>
              <div>@item.ProjektUrl</div>
            </figcaption>
          </figure></a></div>
     }
    </div>
  </div>
</div>