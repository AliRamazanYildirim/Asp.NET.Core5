@model NSchicht.Core.Konkret.Nachricht
@{
    ViewData["Title"] = "KontaktDetails";
    Layout = "~/Views/Shared/_NeuerAdministratorLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Nachrichtdetails Site</h4>
                  <form class="pt-3" method="post" >
                     <div class="form-group">
                      <label for="exampleInputName1">Absender</label>
                      <input type="text" asp-for="Name" class="form-control" id="exampleInputName1" placeholder="Name">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Mail</label>
                      <input type="text" asp-for="Mail" class="form-control" id="exampleInputName1" placeholder="Mail">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputName1">Datum</label>
                      <input type="text" asp-for="Datum" class="form-control" id="exampleInputName1" placeholder="Datum">
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Inhalt</label>
                        <textarea class="form-control" asp-for="Inhalt" id="exampleTextarea1" rows="4"></textarea>
                      </div>
                    <a asp-action="Index" class="btn btn-outline-primary mr-2">Kontaktseite</a>
                    </form>
                </div>
              </div>
            </div>

